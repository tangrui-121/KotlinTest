<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme" >
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="BarChart">
        <attr name="bar_primary_color" format="color"/>
        <attr name="bar_secondary_color" format="color" />
        <attr name="bar_width" format="dimension" />
        <attr name="top_value_size" format="dimension"/>
        <attr name="top_value_color" format="color"/>
        <attr name="bottom_label_size"  format="dimension"/>
        <attr name="bottom_label_color" format="color"/>
        <attr name="show_y_label" format="boolean"/>
        <attr name="animate" format="boolean"/>
        <attr name="auto_text" format="boolean"/><!--柱状图顶部文字是否遮挡y轴刻度-->
    </declare-styleable>
    <declare-styleable name="ShadeView">
        <attr name="shade_type" format="integer">
            <enum name="round" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
        <attr name="shade_color" format="color" />
    </declare-styleable>

    <declare-styleable name="LineChartView">
        <attr name="point_text_site">
            <enum name="LEFT" value="0"/>
            <enum name="CENTER" value="1"/>
            <enum name="RIGHT" value="2"/>
        </attr>
        <attr name="decimal_num" format="integer"/>
    </declare-styleable>

    <declare-styleable name="InvitePromotionView">
        <attr name="zhuge" format="string"/>
    </declare-styleable>

    <declare-styleable name="InviteProfitView">
        <attr name="invite_zhuge" format="string"/>
    </declare-styleable>

    <declare-styleable name="VipGuildView">
        <attr name="vip_zhuge" format="string"/>
        <attr name="business_type" format="string"/>
    </declare-styleable>
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="textIsDisplayable" format="boolean" />
        <attr name="style">
            <enum name="STROKE" value="0" />
            <enum name="FILL" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TempImageView" >
        <attr name="animat_id" format="integer" />
    </declare-styleable>
    <declare-styleable name="FocusImageView">
        <attr name="focus_focusing_id" format="integer" />
        <attr name="focus_success_id" format="integer" />
        <attr name="focus_fail_id" format="integer" />
    </declare-styleable>

    <declare-styleable name="ItemLabelLayout">
        <attr name="left_drawable" format="reference|color"/>
        <attr name="left_drawable_width" format="dimension"/>
        <attr name="left_drawable_height" format="dimension"/>
        <attr name="left_drawable_padding" format="dimension"/>
        <attr name="left_text" format="string"/>
        <attr name="left_text_size" format="dimension"/>
        <attr name="left_text_color" format="color"/>

        <attr name="right_drawable" format="reference|color"/>
        <attr name="right_drawable_width" format="dimension"/>
        <attr name="right_drawable_height" format="dimension"/>
        <attr name="right_drawable_padding" format="dimension"/>
        <attr name="right_text" format="string"/>
        <attr name="right_text_size" format="dimension"/>
        <attr name="right_text_color" format="color"/>
        <attr name="right_hint" format="string"/>
        <attr name="right_hint_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="DrawableTextView">
        <attr name="drawable_width" format="dimension"/>
        <attr name="drawable_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ScanTipsView">
        <attr name="bg" format="reference" />
    </declare-styleable>

    <declare-styleable name="PostPeerCircleImageLayout">
        <!-- 最多可以添加max_num张图片 -->
        <attr name="max_num" format="integer" />
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <attr name="backWidth" format="dimension" />    <!--背景圆环宽度-->
        <attr name="progWidth" format="dimension" />    <!--进度圆环宽度-->
        <attr name="backColor" format="color" />        <!--背景圆环颜色-->
        <attr name="progColor" format="color" />        <!--进度圆环颜色-->
        <attr name="progStartColor" format="color" />   <!--进度圆环开始颜色-->
        <attr name="progFirstColor" format="color" />   <!--进度圆环结束颜色-->
        <attr name="progress" format="integer" />       <!--圆环进度-->
    </declare-styleable>

    <declare-styleable name="ClearEditText">
        <attr name="icon_width" format="integer" />
    </declare-styleable>

    <declare-styleable name="AlignTextView">
        <attr name="atv_padding_start" format="dimension" /><!--左内边距-->
        <attr name="atv_padding_top" format="dimension" /><!--上内边距-->
        <attr name="atv_padding_end" format="dimension" /><!--右内边距-->
        <attr name="atv_padding_bottom" format="dimension" /><!--下内边距-->
        <attr name="atv_text_size" format="dimension" /><!--文字大小-->
        <attr name="atv_text_color" format="color" /><!--文字颜色-->
        <attr name="atv_text" format="string" /><!--内容-->
        <attr name="atv_line_spacing_extra" format="integer" /><!-- 行间距 -->
    </declare-styleable>

    <!-- 头像叠加 -->
    <declare-styleable name="GroupAvatarView">
        <attr name="gav_gap" format="dimension" />
        <attr name="gav_max_count" format="integer" />
    </declare-styleable>

</resources>
