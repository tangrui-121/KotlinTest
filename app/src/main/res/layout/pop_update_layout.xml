<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="@drawable/img_update_with_close">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="55dp"
                android:layout_marginRight="25dp"
                android:padding="0dp"
                android:text="发现新版本"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <View
                android:id="@+id/close"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/ic_updadte_close" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:padding="0dp"
                android:text="V2.5.3"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:lineSpacingMultiplier="1.1"
                    android:padding="0dp"
                    android:text="司法局卡了发贺卡老沙发哈了康师傅哈克龙"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.person.kotlintest.download.RoundProgressBar
                    android:id="@+id/update_progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:indeterminate="false"
                    android:visibility="gone" />

                <View
                    android:id="@+id/update_failure"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/img_update_failure"
                    android:visibility="gone" />
            </FrameLayout>


            <TextView
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/update_button_drawable"
                android:gravity="center"
                android:padding="0dp"
                android:text="立即更新"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/update_bottom_drawable" />
    </LinearLayout>
</RelativeLayout>
